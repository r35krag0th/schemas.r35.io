{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cdn.r35.network/schemas/metadata_v1.json",
  "title": "r35 Networks Metadata",
  "description": "Metadata about r35 Networks resources",
  "type": "object",
  "required": [
    "service",
    "environments",
    "repository"
  ],
  "properties": {
    "service": {
      "type": "string",
      "description": "The name of the service this metadata applies to"
    },
    "environments": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["dev", "production"]
      }
    },
    "repository": {
      "type": "string",
      "description": "The URL of the repository where this metadata is stored",
      "pattern": "^https://github\\.com/(r35krag0th|r35-Networks)/[A-Za-z0-9_.-]+$"
    },
    "terraform": {
      "$ref": "terraform_module_v1.json"
    }
  }
}
